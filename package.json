{
  "name": "nga",
  "version": "2.0.0-alpha.0",
  "license": "MIT",
  "author": "akveo <contact@akveo.com>",
  "bugs": {
    "url": "https://github.com/akveo/ng2-admin/issues"
  },
  "homepage": "https://github.com/akveo/ng2-admin#readme",
  "repository": "git+https://github.com/akveo/ng2-admin.git",
  "scripts": {
    "ng": "ng",
    "rimraf": "rimraf",
    "ngc": "node_modules/.bin/ngc",
    "start": "ng serve",
    "start:hmr": "ng serve --hmr --env=dev-hmr",
    "start:aot": "start --aot",
    "build": "npm run clean:dist && ng build",
    "build:prod": "npm run build -- --prod",
    "build:prod:aot": "npm run build -- --aot",
    "build:ci": "npm run build:prod && npm run build:prod:aot",
    "build:framework": "npm run build:theme",
    "build:theme": "npm run clean:theme && npm run ngc -- -p ./src/framework/theme/tsconfig.publish.json && npm run copy:styles && npm run copy:templates",
    "test": "ng test -sr",
    "test:coverage": "npm run clean:coverage && ng test -sr -cc",
    "lint": "ng lint",
    "lint:styles": "stylelint ./src/framework/**/*.scss",
    "lint:ci": "npm-run-all -p -r lint lint:styles",
    "pree2e": "webdriver-manager update --standalone false --gecko false",
    "e2e": "ng e2e",
    "compodoc": "./node_modules/.bin/compodoc",
    "doc": "compodoc ./src/framework -p ./tsconfig.json --theme readthedocs -d docs --disableGraph --disableCoverage --hideGenerator",
    "doc:serve": "npm run doc -- -s -o",
    "clean:dist": "npm run rimraf -- dist",
    "clean:coverage": "npm run rimraf -- coverage",
    "clean:doc": "npm run rimraf -- doc",
    "clean:theme": "npm run rimraf -- ./src/framework/theme/lib && npm run rimraf -- ./src/framework/theme/compiled",
    "copy:styles": "gulp copy-theme-styles",
    "copy:templates": "gulp copy-theme-templates"
  },
  "keywords": [
    "angular",
    "typescript",
    "ng2-admin",
    "nga-admin",
    "ngx-admin",
    "framework"
  ],
  "dependencies": {
    "@angular/common": "2.4.9",
    "@angular/compiler": "2.4.9",
    "@angular/core": "2.4.9",
    "@angular/forms": "2.4.9",
    "@angular/http": "2.4.9",
    "@angular/platform-browser": "2.4.9",
    "@angular/platform-browser-dynamic": "2.4.9",
    "@angular/router": "3.4.9",
    "@ng-bootstrap/ng-bootstrap": "1.0.0-alpha.20",
    "bootstrap": "4.0.0-alpha.6",
    "core-js": "2.4.1",
    "rxjs": "5.1.1",
    "tether": "1.4.0",
    "zone.js": "0.7.7"
  },
  "devDependencies": {
    "@angular/cli": "1.0.0-rc.1",
    "@angular/compiler-cli": "2.4.9",
    "@angularclass/hmr": "1.2.2",
    "@types/jasmine": "2.5.38",
    "@types/node": "6.0.63",
    "@types/rimraf": "0.0.28",
    "codelyzer": "2.0.1",
    "compodoc": "0.0.41",
    "gulp": "3.9.1",
    "gulp-help": "1.6.1",
    "jasmine-core": "2.5.2",
    "jasmine-spec-reporter": "3.2.0",
    "karma": "1.4.1",
    "karma-chrome-launcher": "2.0.0",
    "karma-cli": "1.0.1",
    "karma-coverage-istanbul-reporter": "0.2.3",
    "karma-jasmine": "1.1.0",
    "karma-jasmine-html-reporter": "0.2.2",
    "npm-run-all": "4.0.1",
    "protractor": "5.1.1",
    "require-dir": "0.3.1",
    "rimraf": "2.6.1",
    "stylelint": "7.8.0",
    "ts-node": "2.0.0",
    "tslint": "4.4.2",
    "tslint-eslint-rules": "3.2.3",
    "typescript": "2.0.10"
  }
}
